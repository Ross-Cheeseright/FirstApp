<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.clearsimpledesign.firstapp.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:background="@color/colorAccent"
        android:text="@string/button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="@string/button_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dateNumberAsgard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayAsgard"
        android:layout_centerHorizontal="true"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="100sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dayAsgard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calendarTitle"
        android:layout_marginTop="23dp"
        android:text="@string/sunday"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/monthAsgardia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateNumberAsgard"
        android:text="@string/january"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateNumberAsgard"
        android:layout_alignBottom="@+id/dateNumberAsgard"
        android:layout_toEndOf="@+id/dateNumberAsgard"
        android:layout_toRightOf="@+id/dateNumberAsgard"
        android:text="rd"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
